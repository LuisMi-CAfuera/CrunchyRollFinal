                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_4_99_mes"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/FAN"
                            app:layout_constraintVertical_bias="0.035" />

                        <LinearLayout
                            android:layout_width="259dp"
                            android:layout_height="168dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pequeñoMES">

                            <TextView
                                android:id="@+id/sinanuncios1"
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:text="@string/sin_anuncios"
                                app:drawableLeftCompat="@drawable/check"
                                tools:ignore="RtlHardcoded" />

                            <TextView
                                android:id="@+id/accesolim1"
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:text="@string/acceso_ilimitado_al_catalogo_de_crunchyroll"
                                app:drawableLeftCompat="@drawable/check"
                                tools:ignore="RtlHardcoded" />

                            <TextView
                                android:id="@+id/nuevos1"
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:text="@string/nuevos"
                                app:drawableLeftCompat="@drawable/check"
                                tools:ignore="RtlHardcoded" />

                            <TextView
                                android:id="@+id/dispositivo1"
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:text="@string/uno"
                                app:drawableLeftCompat="@drawable/check"
                                tools:ignore="RtlHardcoded" />

                            <TextView
                                android:id="@+id/sinconexion1"
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:text="@string/pelis"
                                app:drawableLeftCompat="@drawable/cruz3"
                                tools:ignore="RtlHardcoded" />

                            <TextView
                                android:id="@+id/descuento1"
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/cruz3"
                                android:gravity="left"
                                android:text="@string/mensual"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mediano1"
                        android:layout_width="274dp"
                        android:layout_height="421dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/cuadrado"
                        tools:layout_editor_absoluteX="77dp"
                        tools:layout_editor_absoluteY="87dp">

                        <ImageView
                            android:id="@+id/coronaMega"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.05"
                            app:srcCompat="@drawable/cruz_blanca_masgrande" />

                        <TextView
                            android:id="@+id/MegaFan"
                            style="@style/Premium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mega_fan"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/coronaMega"
                            app:layout_constraintVertical_bias="0.028" />

                        <TextView
                            android:id="@+id/medianoMes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_6_49_mes"
